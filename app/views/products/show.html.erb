<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Review</th>
          <th>Name</th>
          <th>Rating</th>
          <th>Review Posted At</th>
        </tr>
      </thead>
      <tbody>
        <% @product.reviews.reverse.each do |review| %>
        <tr>
            <td> <%=review.description %> </td>
            <td> <%=User.find(review.user_id).email %> </td>
            <td> <%=review.rating%> </td>
            <td> <%=review.created_at%> </td>
        </tr>
      <% end %>
    </tbody>
    </table>

    <% if current_user %>
    <%= form_for :review, url: "/products/#{@product.id}/reviews" do |r| %>
      Description: <%= r.text_area :description%>
      Rating: <%= r.select :rating,options_for_select([1,2,3,4,5]), {}%>
      <%= submit_tag("Post Review") %>
    <% end %>
    <% end %>
  </article>

</section>
